{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gcc build active file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall", "-Wextra", "-pedantic",
        "-g",
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
